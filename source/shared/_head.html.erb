<meta charset="utf-8">
<!-- Always force latest IE rendering engine or request Chrome Frame -->
<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
<!-- Responsive -->
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Use title if it's in the page YAML frontmatter -->
<title><%= current_page.data.title %></title>
<meta name="description" content="<%= current_page.data.description %>">

<!-- Favicons -->
<link rel="shortcut icon" href="images/favicons/favicon.ico">
<link rel="apple-touch-icon" sizes="57x57" href="images/favicons/apple-touch-icon-57x57.png">
<link rel="apple-touch-icon" sizes="60x60" href="images/favicons/apple-touch-icon-60x60.png">
<link rel="apple-touch-icon" sizes="72x72" href="images/favicons/apple-touch-icon-72x72.png">
<link rel="apple-touch-icon" sizes="76x76" href="images/favicons/apple-touch-icon-76x76.png">
<link rel="apple-touch-icon" sizes="114x114" href="images/favicons/apple-touch-icon-114x114.png">
<link rel="apple-touch-icon" sizes="120x120" href="images/favicons/apple-touch-icon-120x120.png">
<link rel="apple-touch-icon" sizes="144x144" href="images/favicons/apple-touch-icon-144x144.png">
<link rel="apple-touch-icon" sizes="152x152" href="images/favicons/apple-touch-icon-152x152.png">
<link rel="apple-touch-icon" sizes="180x180" href="images/favicons/apple-touch-icon-180x180.png'">
<link rel="icon" type="image/png" href="images/favicons/favicon-16x16.png" sizes="16x16">
<link rel="icon" type="image/png" href="images/favicons/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="images/favicons/favicon-96x96.png" sizes="96x96">
<link rel="icon" type="image/png" href="images/favicons/favicon-194x194.png" sizes="194x194">
<link rel="icon" type="image/png" href="images/favicons/android-chrome-192x192" sizes="192x192">

<meta name="apple-mobile-web-app-title" content="CforGood">
<meta name="application-name" content="CforGood">
<meta name="msapplication-TileColor" content="#00aba9">
<meta name="msapplication-TileImage" content="favicons/mstile-144x144.png">
<meta name="theme-color" content="#ffffff">

<!-- Open Graph FB -->
<meta property="og:title" content="<%= current_page.data.title %>">
<meta property="og:type" content="website">
<meta property="og:description" content="<%= current_page.data.description %>">
<meta property="og:url" content="http://www.cforgood.com<%= current_page.url %>">
<meta property="og:image" content="http://www.cforgood.com/<%= image_path current_page.data.thumbnail %>">
<meta property="og:site_name" content="CforGood">

<!-- Twitter card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@CforGood">
<meta name="twitter:title" content="<%= current_page.data.title %>">
<meta name="twitter:description" content="<%= current_page.data.description %>">
<meta name="twitter:creator" content="@CforGood">
<meta name="twitter:image:src" content="http://www.cforgood.com/<%= image_path current_page.data.thumbnail %>">

<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="<%= current_page.data.title %>">
<meta itemprop="description" content="<%= current_page.data.description %>">
<meta itemprop="image" content="http://www.cforgood.com/<%= image_path current_page.data.thumbnail %>">

<%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

<!-- Script for google analytics necessary in HEAD section -->
<%= partial "shared/js/google_analytics" %>

<!-- Hotjar Tracking Code for www.cforgood.com -->
<%= partial "shared/js/hotjar" %>

